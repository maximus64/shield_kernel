#include <tegra210-platforms/tegra210-camera-e3322-a00.dtsi>

#define CAM0_RST_L	TEGRA_GPIO(S, 4)
#define CAM0_PWDN	TEGRA_GPIO(S, 7)

/* camera control gpio definitions */
/ {
	gpio@6000d000 {
		camera_control {
			gpio-output-high = <
				TEGRA_GPIO(S, 4)
				>;
			gpio-output-low = <
				TEGRA_GPIO(S, 7)
				>;
		};
	};

	aliases {
		gpio288 = &tca6408_21;	/* 288 = 272 + TCA9539_GPIO_NUM */
	};

	host1x {
		i2c@546c0000 {
			tca6408_21: tca6408@21 {
				compatible = "ti,tca6408";
				gpio-controller;
				#gpio-cells = <2>;
				reg = <0x21>;
				gpio-init-names = "default";
				gpio-init-0 = <&tca6408_21_default>;
				vcc-supply = <&en_vdd_cam>;
				tca6408_21_default: default {
					/*
					 * GPIO-6 : NC
					 * GPIO-7 : NC
					 */
					gpio-input = <6 7>;

					/*
					 * GPIO-0 : XCLR_CAM1
					 * GPIO-1 : XCLR_CAM2
					 * GPIO-2 : XCLR_CAM3
					 * GPIO-3 : XCLR_CAM4
					 * GPIO-4 : XCLR_CAM5
					 * GPIO-5 : XCLR_CAM6
					 */

					gpio-output-low = <0 1 2 3 4 5>;
				};
			};

			tca9548@77 {
				compatible = "nxp,pca9548";
				reg = <0x77>;
				#address-cells = <1>;
				#size-cells = <0>;
				vcc-supply = <&en_vdd_cam>;
				skip_mux_detect;
				force_bus_start = <T210_CAMERA_I2C_MUX_BUS(0)>;
				i2c@0 {
					reg = <0>;
					i2c-mux,deselect-on-exit;
					#address-cells = <1>;
					#size-cells = <0>;
				};
				i2c@1 {
					reg = <1>;
					i2c-mux,deselect-on-exit;
					#address-cells = <1>;
					#size-cells = <0>;
				};
				i2c@2 {
					reg = <2>;
					i2c-mux,deselect-on-exit;
					#address-cells = <1>;
					#size-cells = <0>;
				};
				i2c@3 {
					reg = <3>;
					i2c-mux,deselect-on-exit;
					#address-cells = <1>;
					#size-cells = <0>;
				};
				i2c@4 {
					reg = <4>;
					i2c-mux,deselect-on-exit;
					#address-cells = <1>;
					#size-cells = <0>;
				};
				i2c@5 {
					reg = <5>;
					i2c-mux,deselect-on-exit;
					#address-cells = <1>;
					#size-cells = <0>;
				};
			};
		};
	};
};

/{
	host1x {
		i2c@546c0000 {
			tca9548@77 {
				i2c@0 {
					imx219_a@10 {
						mclk = "cam_mclk1";
						reset-gpios = <&tca6408_21 0 GPIO_ACTIVE_HIGH>;
						vana-supply = <&en_vdd_cam_hv_2v8>;
						vdig-supply = <&en_vdd_cam_1v2>;
						dovdd-supply = <&en_vdd_cam>;
					};
				};
				i2c@1 {
					imx219_b@10 {
						mclk = "cam_mclk1";
						reset-gpios = <&tca6408_21 1 GPIO_ACTIVE_HIGH>;
						vana-supply = <&en_vdd_cam_hv_2v8>;
						vdig-supply = <&en_vdd_cam_1v2>;
						dovdd-supply = <&en_vdd_cam>;
					};
				};
				i2c@2 {
					imx219_c@10 {
						mclk = "cam_mclk1";
						reset-gpios = <&tca6408_21 2 GPIO_ACTIVE_HIGH>;
						vana-supply = <&en_vdd_cam_hv_2v8>;
						vdig-supply = <&en_vdd_cam_1v2>;
						dovdd-supply = <&en_vdd_cam>;
					};
				};
				i2c@3 {
					imx219_d@10 {
						mclk = "cam_mclk1";
						reset-gpios = <&tca6408_21 3 GPIO_ACTIVE_HIGH>;
						vana-supply = <&en_vdd_cam_hv_2v8>;
						vdig-supply = <&en_vdd_cam_1v2>;
						dovdd-supply = <&en_vdd_cam>;
					};
				};
				i2c@4 {
					imx219_e@10 {
						mclk = "cam_mclk1";
						reset-gpios = <&tca6408_21 4 GPIO_ACTIVE_HIGH>;
						vana-supply = <&en_vdd_cam_hv_2v8>;
						vdig-supply = <&en_vdd_cam_1v2>;
						dovdd-supply = <&en_vdd_cam>;
					};
				};
				i2c@5 {
					imx219_f@10 {
						mclk = "cam_mclk1";
						reset-gpios = <&tca6408_21 5 GPIO_ACTIVE_HIGH>;
						vana-supply = <&en_vdd_cam_hv_2v8>;
						vdig-supply = <&en_vdd_cam_1v2>;
						dovdd-supply = <&en_vdd_cam>;
					};
				};
			};
		};
	};
};
